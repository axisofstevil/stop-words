{
    "name": "axisofstevil/stop-words",
    "description": "A library for managing and filtering text with stop words",
    "keywords": [
        "filtering",
        "stop words"
    ],
    "homepage": "https://github.com/axisofstevil/stop-words",
    "license": "MIT",
    "authors": [
        {
            "name": "Steven Maguire",
            "email": "stevenmaguire@gmail.com",
            "role": "Developer",
            "homepage": "https://stevenmaguire.com"
        }
    ],
    "require": {
        "php": "^8.0"
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^3.0",
        "laravel/pint": "^1.1",
        "pestphp/pest": "^1.20",
        "spatie/ray": "^1.28"
    },
    "autoload": {
        "psr-4": {
            "Axisofstevil\\StopWords\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Axisofstevil\\StopWords\\Tests\\": "tests"
        }
    },
    "scripts": {
        "test": "vendor/bin/pest",
        "test-coverage": "vendor/bin/pest --coverage",
        "format": "vendor/bin/php-cs-fixer fix --allow-risky=yes"
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "pestphp/pest-plugin": true
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
